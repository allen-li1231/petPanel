<view class="page" data-weui-theme="{{theme}}">
    <view class="page__bd">
        <mp-cells ext-class="my-cells" title="基本信息">
            <mp-cell link url="petname/petname" value="名字" footer="{{petName}}">
            </mp-cell>
            <mp-cell link url="birth/birth" value="生日" footer="{{petBirth}}">
            </mp-cell>
            <mp-cell link url="gender/gender" value="性别" footer="{{petGender}}">
            </mp-cell>
        </mp-cells>
        <mp-cells>
            <mp-cell link url="kind/kind" value="种类" footer="{{petKind}}">
            </mp-cell>
            <mp-cell link url="sterilization/sterilization" value="绝育情况" footer="{{petSter}}">
            </mp-cell>
            <mp-cell link url="vaccination/vaccination" value="上次疫苗时间" footer="{{petVacc}}">
            </mp-cell>
        </mp-cells>
    </view>
</view>
