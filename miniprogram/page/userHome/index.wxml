<import src="../../common/head.wxml" />
<import src="../../common/foot.wxml" />
<!--page/userHome/index.wxml-->

<view class="index">
  <view class="index-hd">
    <view class="userinfo">
      <block wx:if="{{!appGlobal.hasUserInfo && appGlobal.canIUse}}">
        <button open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 
          授权小程序
        </button>
        <view class="index-desc">
          点击按钮，授权小程序获得您的基本公开信息
        </view>
      </block>
      <block wx:else>
        <image bindtap="bindViewTap" class="userinfo-avatar" src="{{appGlobal.userInfo.avatarUrl}}" mode="cover"></image>
        <text class="userinfo-nickname">{{appGlobal.userInfo.nickName}}</text>
      </block>
    </view>
  </view>
  <view class="index-bd">
    <view class="kind-list">
      <block wx:for-items="{{List}}">
          <navigator url="pages/{{item.page}}/{{item.page}}" class="navigator">
            <view class="kind-list-text">{{item.name}}</view>
          </navigator>
      </block>
    </view>
  </view>
  <template is="foot"></template>
</view>