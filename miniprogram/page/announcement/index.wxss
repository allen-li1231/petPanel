/* page/announcement/index.wxss */
/* 页面背景色 */
@import "../common/index.wxss";

page {
  background: rgb(247, 247, 247);
}

.nav_tab {
  width: 702rpx;
  margin: 20rpx auto;
  height: 100rpx;
  display: flex;
  background: #fff;
  border-radius: 10rpx;
  flex-direction: row;
}
/* 未选中的样式 */
.common {
  line-height: 100rpx;
  text-align: center;
  flex: 1;
  color: #333;
  font-size: 28rpx;
  opacity: 0.5;
}
/* 选中时的样式 */
.active {
  line-height: 100rpx;
  text-align: center;
  color: rgb(70,118,166);
  flex: 1;
  font-size: 28rpx;
}
/* 下划线的样式 */
.nav_underline {
  background: rgb(70,118,166);
  width: 54rpx;
  height: 6rpx;
  margin-top: -10rpx;
  margin-left: 147rpx;
  border-radius: 8rpx;
}

.tab-content {
    /* height: 100px; */
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    padding: 20px;
}

.weui-tabs-bar__title {
    margin: 0px 10px;
}

.tab-bar-title__selected {
    font-size: 20px;
    font-weight: bold;
}
.item-title {
    margin: 10px 10px 5px;
    font-size: 18px;
    width: 100%;
}
.item-desc {
    margin: 5px 10px 0;
    width: 100%;
    color: var(--weui-FG-1)
}
.weui-tabs-bar__item {
    background-color: var(--weui-BG-2) !important;
    color: var(--weui-FG-0) !important;
}
.page-section{
  width: 702rpx;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto;
}
.text-box{
  background-color:rgb(234,177,115);
  border-radius: 5px;
  margin-bottom: 30px;
}
.page-section-title{
  color:rgb(70,118,166);
  font-size: 19px;
  padding-left: 0px;
}
.textarea-wrp{
  background-color:#fff;
  font-size: 18px;
  margin-bottom: 30px;
}
.page-section-discription{
  color:grey;
  font-size: 14px;
}
.submit{
  color: #fff;
  background-color:rgb(234,177,115);
  margin-right: 80px;
  margin-left: 80px;
  margin-top:30px;
  }
  .submit::after {
    border: none;
  }
  