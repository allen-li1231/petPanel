<!--page/discover/index.wxml-->
<view class="page-section">
  <block wx:for="{{lst_hospital_info}}" wx:key="item">
    <mp-cells>
      <mp-cell>
        <view class ="title" >
          <view class="title-name">{{item.hospital_name}}</view>
          <view class="flex-item icon">
            <mp-icon type="outline" icon="star" color="#6495ED" size="25"></mp-icon>
          </view>
        </view>
        <view class="distance">距离{{item.hospital_distance}}公里</view>
        <view class="detail">
          <view class="tag">推荐：{{item.hospital_tag}}</view>
          <navigator url="{{navHos}}" hover-class="ohter-navigator">
            <view class="text-navigator">详情>></view>
            </navigator>
          </view>
      </mp-cell>
    </mp-cells>
  </block>
</view>