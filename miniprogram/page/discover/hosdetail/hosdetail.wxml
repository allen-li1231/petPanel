<!--page/discover/hosdetail/hosdetail.wxml-->
<view class="page-section">
  <view class="msg-box">
    <i-notice-bar icon="systemprompt" loop>"{{msg}}"</i-notice-bar>
  </view>
  <mp-cells>
    <mp-cell>
      <view class="hospital-info">
        <view class="title-name">{{hosName}}</view>
        <view class="flex-item icon">
          <mp-icon type="outline" icon="star" color="#6495ED" size="25"></mp-icon>
        </view>
      </view>
    </mp-cell>
    <mp-cell>
      <view class="base-info">
        <view class="address">{{hosAddress}}</view>
        <view class="flex-item icon">
          <mp-icon type="outline" icon="location" color="#6495ED" size="25"></mp-icon>
        </view>
      </view>
      <view class="tele">{{hosTele}}</view>
    </mp-cell>
    <mp-cell>
      <view class="base-info">
        <view class="licenseTitle">诊疗范围：</view>
        <view class="license">{{hosLicense}}</view>
      </view>
      <view class="base-info">
        <view class="expiredTitle">有效期限：</view>
        <view class="expireddate">{{hosExpired}}</view>
      </view>
    </mp-cell>
  </mp-cells>
  <mp-cells>
    <mp-cell>
      <view class="title-vetname">院内医生</view>
    </mp-cell>
    <scroll-view class="vet-info" scroll-x="true" bindscroll="scroll">
      <block wx:for="{{vetList}}" wx:key="item">
        <navigator url="{{item.navLink}}" class="multi-info">
          <view class="image">
            <image class="vetPhoto" src="{{item.vetImg}}"></image>
          </view>
          <view class="vetName">{{item.name}}</view>
        </navigator>
      </block>
    </scroll-view>
  </mp-cells>

  <mp-cells>
    <view class="caption-wrap">
      <text class="title-devicename">特色设施介绍</text>
      <i-collapse name="{{name}}" accordion>
        <block wx:for="{{deviceList}}" wx:key="item">
          <i-collapse-item title="{{item.name}}" name="{{item.id}}">
            <view slot="content">{{item.content}}</view>
          </i-collapse-item>
        </block>
      </i-collapse>
    </view>
  </mp-cells>

</view>