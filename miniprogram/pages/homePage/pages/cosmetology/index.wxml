<!--page/homePage/pages/cosmetology/index.wxml-->
<view class="page-section">
  <block wx:for="{{lst_hospital_info}}" wx:key="item">
    <mp-cells>
      <mp-cell>
        <view class="title">
          <view class="title-name">{{item.hospital_name}}</view>
          <view class="flex-item icon">
            <mp-icon type="outline" icon="star" color="rgb(234,177,115)" size="25"></mp-icon>
          </view>
        </view>
        <view class="distance">距离{{item.hospital_distance}}公里</view>
        <view class="detail">
          <view class="tag">推荐：
          <block wx:for="{{item.hospital_tag}}" wx:key="*this"  wx:for-item="items">
            <text wx:if="{{items.key == true}}" style="color:rgb(234,177,115);font-weight:bold">{{items.str}}</text>               
            <text wx:else>{{items.str}}</text>
         </block> 
          </view>
          <navigator url="{{navHos}}" hover-class="ohter-navigator">
            <view class="text-navigator">详情>></view>
          </navigator>
        </view>
      </mp-cell>
    </mp-cells>
  </block>
</view>