<!--page/discover/vetdetail/vetdetail.wxml-->
<view class="page" data-weui-theme="{{theme}}">
  <view class="msg-box">
    <i-notice-bar icon="systemprompt" loop speed="{{speed}}">"{{vet_message}}"</i-notice-bar>
  </view>
  <mp-cells>
    <mp-cell>
      <view class="vet-info">
        <view class="image">
          <image class="vetPhoto" src="{{vet_photo}}"></image>
        </view>
        <view class="base-info">
          <view class="base-info-line1">
            <view class="title-name">{{vet_name}}</view>
            <navigator url="../vetadd/vetadd" hover-class="other-navigator">
              <view class="text-navigator">[编辑]</view>
            </navigator>
            <view class="flex-item icon">
              <mp-icon type="outline" icon="star" color="rgb(234,177,115)" size="25"></mp-icon>
            </view>
          </view>
          <view class="base-info-line2">
            <view class="hos-info">{{hospital_name}}</view>
          </view>
        </view>
      </view>
    </mp-cell>
  </mp-cells>

  <mp-cells>
    <mp-cell value="从业年限" footer="{{vet_work_year}}"></mp-cell>
    <mp-cell value="擅长" footer="{{vet_expertise}}"></mp-cell>
    <mp-cell link url="{{vet_certificate_photo}}" value="执业兽医师资格证书" footer="点击查看">
      <!-- 这里点击图片可以查看-->
    </mp-cell>
  </mp-cells>
  <mp-cells>
    <view class="caption-wrap">
      <text class="caseTitle">服务案例</text>
      <i-collapse name="{{name}}" accordion>
        <block wx:for="{{lst_vet_case_info}}" wx:key="item">
          <i-collapse-item title="{{item.vet_case_title}}" name="{{item.vet_case_id}}">
            <view slot="content" style="color:grey">{{item.vet_case_content}}</view>
          </i-collapse-item>
        </block>
      </i-collapse>
    </view>
  </mp-cells>
  <button class="weui-btn" style="width:80vw" bindtap="tapOneDialogButton">
    <!--这里设置点击直接反馈给后台就好了。跳一个反馈成功的popup-->
    <text>如该医生已不在职，请联系我们</text>
  </button>
  <mp-dialog title="反馈成功" show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
    <view>感谢反馈，我们会尽快核实</view>
    <!--这里要设置点确定之后弹框消失-->
  </mp-dialog>
</view>